[include]
  path = ~/.gitconfig-secret
  path = ~/.config/delta/themes.gitconfig

[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  features = monokai
  navigate = true
  side-by-side = false
  colorMoved = default

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default
